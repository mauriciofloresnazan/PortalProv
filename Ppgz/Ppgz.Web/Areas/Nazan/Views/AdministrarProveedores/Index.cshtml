@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Gestion de Proveedores</h2>
<p class="page-description-title"><i class="fa fa-info" aria-hidden="true"></i> <i>Listado de Cuentas de Proveedores</i></p>

<div class="clearfix">
    <a href="@Url.Action("Registrar", "AdministrarProveedores")" class="btn btn-primary pull-right"><i class="fa fa-plus" aria-hidden="true"></i> Registrar Cuenta de Proveedor</a>
</div>
<div class="panel panel-default">
    <div class="panel-heading">Proveedores Registrados</div>
    <div class="panel-body">
        <table id="cuentas" class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th class="text-center">Código</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Responsable</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Estatus</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cuenta in (ViewBag.cuentas))
                {
                    <tr>
                        <td class="text-center vert-align">@cuenta.CodigoProveedor</td>
                        <td class="text-center vert-align">@cuenta.NombreCuenta</td>
                        <td class="text-center vert-align">
                            cuenta.AspNetUser1.Nombre
                        </td>
                        <td class="text-center vert-align">@cuenta.Tipo
                        </td>
                        <td class="text-center vert-align">
                            @if (@cuenta.Activo != null)
                            {
                                if (@cuenta.Activo)
                                {
                                    <span>ACTIVO</span>
                                }
                            }

                        </td>
                        <td class="text-center vert-align">
                            <div class="btn-group hidden-xs">
                                <a class="btn btn-warning btn-xs" href="@Url.Action("Editar", "AdministrarProveedores", new { @id = @cuenta.Id })">
                                    <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-xs" href="@Url.Action("Eliminar", "AdministrarProveedores", new { @id = @cuenta.Id })" data-toggle="confirmation" data-btn-ok-label="Si" data-title="¿Esta seguro?" data-content="El usuario será eliminado.">
                                    <i class="fa fa-times" aria-hidden="true"></i> Eliminar
                                </a>
                            </div>
                            <div class="btn-group-vertical visible-xs">
                                <a class="btn btn-warning btn-xs" href="@Url.Action("Editar", "AdministrarProveedores", new { @id = @cuenta.Id })">
                                    <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-xs" href="@Url.Action("Eliminar", "AdministrarProveedores", new { @id = @cuenta.Id })" data-toggle="confirmation" data-btn-ok-label="Si" data-title="¿Esta seguro?" data-content="El usuario será eliminado.">
                                    <i class="fa fa-times" aria-hidden="true"></i> Eliminar
                                </a>
                            </div>

                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">


        $(document).ready(function () {
            $('#cuentas').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
        });


    </script>
}


