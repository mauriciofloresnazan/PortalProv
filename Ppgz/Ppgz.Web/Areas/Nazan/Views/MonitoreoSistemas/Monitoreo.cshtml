@using System.Data
@using System.Globalization
@using Ppgz.Repository
@{
    ViewBag.Title = "Monitoreo Sistemas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var graf = (DataTable)ViewBag.Resss;

}
<br />
<br />
<br />
<p class="page-description-title">
    <i class="fa fa-calculator" aria-hidden="true"></i>
    <i>MONITOREO SISTEMAS LEON</i>
</p>
<div class="panel panel-default">
    <div class="panel-heading"><p style="text-align:center;font-weight:bold;font-size:18px;font-family: Helvetica Neue,Helvetica,Arial,sans-serif;">ESTATUS DE APLICACIONES</p></div>
    <div class="panel-body">

        <div class="col-md-12">
            <table id="Monitor" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Hora Validación</th>
                        <th class="text-center">Sistema</th>
                        <th class="text-center">Cliente</th>
                        <th class="text-center">Servidor</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow graficas in graf.Rows)
                    {



                        <tr>
                            <td class="text-center vert-align">@graficas["Hora_Reporte"]</td>
                            <td class="text-center vert-align">@graficas["Sistema"]</td>
                            <td class="text-center vert-align ocultar">@graficas["CLIENTE"]</td>
                            <td class="text-center vert-align ocultar">@graficas["SERVIDOR"]</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/dt/dataTables.buttons.js"></script>
    <script src="~/assets/dt/dataTables.buttons.min.js"></script>
    <script src="~/assets/dt/buttons.html5.min.js"></script>
    @*<script src="~/assets/dt/jquery.dataTables.min.js"></script>*@
    <script src="~/assets/dt/jszip.min.js"></script>
    <script src="~/assets/dt/pdfmake.min.js"></script>
    @*<script src="~/assets/dt/vfs_fonts.js"></script>*@
    <script type="text/javascript">
	
        document.title = "Monitoreo Sistemas Bajio";
        $(document).ready(function () {
            $('#Monitor').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                   //'excelHtml5',
                    //'csvHtml5',
                    //'pdfHtml5',
                ],
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
            });
        });
    </script>
}


