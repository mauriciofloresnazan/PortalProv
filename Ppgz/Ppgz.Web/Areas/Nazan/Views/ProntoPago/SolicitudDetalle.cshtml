                        <span style="margin: 0;">
                            <i>Por favor verifique su solicitud.</i>
                        </span>
                        <hr style="margin-top: 0;" />
                        <div class="form-group">
                            <label class="col-sm-6 control-label" for="montoOriginal">Monto Original</label>
                            <div class="col-sm-4">
                                <input class="form-control" id="montoOriginal" value="" type="text" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label" for="montoOriginal">Descuentos por pronto pago</label>
                            <div class="col-sm-4">
                                <input class="form-control" id="montoOriginal" value="" type="text" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label" for="montoOriginal">Otros descuentos</label>
                            <div class="col-sm-4">
                                <input class="form-control" id="montoOriginal" value="" type="text" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-6 control-label" for="montoOriginal">Total Solicitado</label>
                            <div class="col-sm-4">
                                <input class="form-control" id="montoOriginal" value="" type="text" readonly />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group" style="text-align: right">
            <div class="col-md-10 col-md-offset-2">


                <a href="1.html" class="btn btn-default">
                    Volver
                </a>

                <a href="1.html" class="btn btn-warning">
                    Guardar
                </a>

                <a href="1.html" class="btn btn-success">
                    Aprobar
                </a>

                <a href="1.html" class="btn btn-danger">
                    Rechazar
                </a>
            </div>
        </div>
    </div>
    <hr />
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Detalle de descuentos</h4>
            </div>
            <div class="modal-body">
                <table id="descuentos" class="table table-striped table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Num Descuento</th>
                            <th class="text-center">Monto</th>
                            <th class="text-center">Descripcion</th>
                            <th class="text-center"><input type="checkbox" id="cbHeader"/></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in descuentoslist)
                        {
                            <tr>
                                <td class="text-center vert-align">@d.NumeroDocumento</td>
                                <td class="text-center vert-align">@d.Monto</td>
                                <td class="text-center vert-align">@d.Descripcion</td>
                                <td class="text-center vert-align">
                                    <input class="solready" type="checkbox" name="cb" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#pagos').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
            });

            $('#cbHeader').click(function () {
                $('.solready').prop('checked', this.checked);
            });

            $('#descuentos').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
            });

            $('#cbHeaderPagos').click(function () {
                $('.cbPagos').prop('checked', this.checked);
            });

            calcularMontoOriginal();
        });   

        function calcularMontoOriginal() {
            $('#pagos > tbody  > tr').each(function () {
                var monto = 0.00;
                if ($(this).find(".cbPagos").prop('checked')) {
                    monto = monto + $(this).find(".monto").val();
                }       
                $("#montoOriginal").val(monto);
            });
        }
    </script>
    <style>
        #table-scroll {
            height: 150px;
            overflow: auto;
            overflow-x: hidden;
        }
    </style>

}