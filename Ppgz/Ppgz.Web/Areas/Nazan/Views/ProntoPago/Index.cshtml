@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[,] soc = ViewBag.Sociedades;
}


<div class="container body-content">
    <h2 class="form-signin-heading">Pronto Pago</h2>
    <p class="page-description-title">
        <i class="fa fa-calculator" aria-hidden="true"></i>
        <i>Seleccione </i>
    </p>

    <div class="panel panel-default">
        <div class="panel-heading"> </div>
        <div class="panel-body">

            <div class="col-md-12">
                <table id="proveedoresf" class="table table-striped table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Número</th>
                            <th class="text-center">Nombre</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i< (soc.Length/2); i++)
                        {
                            string numero = soc[i, 0];
                            string nombre = soc[i, 1];
                            <tr>
                                <td class="text-center vert-align">@numero</td>
                                <td class="text-center vert-align">@nombre</td>
                                <td class="text-center vert-align">
                                    <a href="@Url.Action("Index2", "ProntoPago", new { @sociedad = numero})" class="btn btn-primary">
                                        Seleccionar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <hr />
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#proveedoresf').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
            });            
        });
    </script>
}
