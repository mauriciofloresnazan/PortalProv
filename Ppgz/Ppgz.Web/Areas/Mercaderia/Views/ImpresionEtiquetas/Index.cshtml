@using Ppgz.Repository
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Impresión de Etiquetas</h2>
<p class="page-description-title"><i class="fa fa-address-book" aria-hidden="true"></i> <i>En esta sección se podrá Imprimir las etiquetas asociadas en su cuenta.</i></p>

<div class="panel panel-default">
    <div class="panel-heading">Impresión de Etiquetas</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="etiquetas" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Numero Documento</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Descargar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (etiqueta cr in ViewBag.Etiquetas)
                    {
                        <tr>
                            <td class="text-center">@cr.OrdenCompraNumeroDoc</td>
                            <td class="text-center">@cr.Fecha</td>
                            <td class="text-center vert-align">
                                <a href="@Url.Action("Descargar", "ImpresionEtiquetas", new {@id = @cr.Id})">
                                    <i class="fa fa-file-excel-o" aria-hidden="true"></i> Descargar
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $('#etiquetas').DataTable({
                "language": {
                    "url": "@Url.Content("~/assets/vendor/dataTables-1.10.13/Spanish.json")"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });

        });

    </script>
}


