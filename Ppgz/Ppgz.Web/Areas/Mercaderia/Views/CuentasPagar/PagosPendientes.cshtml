@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Gestión de Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Gestión de Pagos Pendientes</h2>
<p class="page-description-title"><i class="fa fa-calculator" aria-hidden="true"></i> <i>En esta sección podrá gestionar los pagos que tiene con el Grupo Nazan.</i></p>

<div class="panel panel-default">
    <div class="panel-heading">Pagos Pendientes</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="mensajes" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Proveedor RFC</th>
                        <th class="text-center">Proveedor Razón Social</th>
                        <th class="text-center">Importe</th>
                        <th class="text-center">Detalle</th>
                    </tr>
                </thead>
                <tbody>
   
                    <tr>
                        <td class="text-center">@DateTime.Today.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@ViewBag.proveedor.Rfc</td>
                        <td class="text-center">@ViewBag.proveedor.NombreProveedor</td>
                        <td class="text-center">@ViewBag.importeTotal</td>
                        <td class="text-center">
                            <a class="btn btn-success btn-xs" href="@Url.Action("PagosPendientesDetalle", "CuentasPagar", new { proveedorId = ViewBag.proveedor.Id })">Detalle</a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><span id="mensaje-titulo"></span></h4>
            </div>
            <div class="modal-body">
                <p id="mensaje-contenido"></p>
            </div>
            <div class="clearfix">
                <a href="#" class="btn btn-primary pull-right"><i class="fa fa-download" aria-hidden="true"></i> Descargar</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        var usuarioMensajes = "@ViewBag.mensajesUsuario";

        $(document).ready(function () {
            $(document).on("click", ".ver-mensaje", function () {
                Visualizar($(this).data('id'));
                var titulo = $(this).data('titulo');
                var contenido = $(this).data('contenido');
                $('.modal-title').text(titulo);
                $(".modal-body #mensaje-contenido").text(contenido);
            });

            $(document).on("click", ".descargar-mensaje", function () {
                Visualizar($(this).data('id'));
            });

            $('#mensajes').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
        });


        function Visualizar(mensajeId) {
            $.ajax({
                url: '@Url.Action("Visualizar", "MensajesInstitucionales")',
                data: { id: mensajeId },
                type: 'POST',
                success: function (data) {
                    $("#mensaje-tr-id-" + mensajeId + " .leido-flag").text("SI");
                    //alert(data);
                }
            });
        }
    </script>
}


