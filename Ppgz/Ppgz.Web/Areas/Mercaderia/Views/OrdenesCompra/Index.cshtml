@using System.Data
@using System.Globalization
@using Ppgz.Repository
@{
    ViewBag.Title = "Ordenes de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Gestión de Ordenes de Compra</h2>
<p class="page-description-title"><i class="fa fa-address-book" aria-hidden="true"></i> <i>En esta sección se podrá gestionar las órdenes de compra que tiene asociadas en su cuenta.</i></p>

<div class="panel panel-default">
    <div class="panel-heading">Ordenes de Compra</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="ordenes" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">N° de Orden de Compra</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Numero de Proveedor</th>
                        <th class="text-center">Proveedor Razón Social</th>
                        <th class="text-center">Descargar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ordencompra ordenCompra in ViewBag.data)
                    {
                        <tr>
                            @if (ordenCompra.FechaVisualizado == null)
                            {
                                <td class="text-center"><i class="fa fa-lightbulb-o" aria-hidden="true" style="font-size: 24px; color: red;"></i></td>
                            }
                            else
                            {
                                <td class="text-center"><i class="fa fa-lightbulb-o" aria-hidden="true" style="font-size: 24px; color: green;"></i></td>
                            }
                            <td class="text-center vert-align">@ordenCompra.NumeroDocumento</td>
                            <td class="text-center vert-align">@DateTime.ParseExact(ordenCompra.FechaDocCompra,"yyyyMMdd", CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")</td>
                            <td class="text-center vert-align">@ordenCompra.proveedore.NumeroProveedor</td>
                            <td class="text-center vert-align">@ordenCompra.proveedore.Nombre1</td>

                            <td class="text-center vert-align">
                                <a href="@Url.Action("Descargar", "OrdenesCompra", new { @NumeroDocumento = ordenCompra.NumeroDocumento })" class="descargar-visualizar"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Descargar</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ordenes').DataTable({
                "language": {
                    "url": "@Url.Content("~/assets/vendor/dataTables-1.10.13/Spanish.json")"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
            $(document).on("click", ".descargar-visualizar", function () {


                $(this).parent().parent().find(".fa-lightbulb-o").css("color", "green");
            });

        });
    </script>
}


