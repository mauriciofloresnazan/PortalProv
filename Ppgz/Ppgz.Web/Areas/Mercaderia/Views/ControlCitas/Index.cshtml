@model dynamic

@{
    ViewBag.Title = "Administracion de Citas";
    ViewBag.Descripcion = "Seleccione una Razón Social.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p class="page-description-title">
    <i class="fa fa-calculator" aria-hidden="true"></i> <i>@ViewBag.Descripcion</i>
</p>

<div class="panel panel-default">
    <div class="panel-heading">Razones Sociales</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="mensajes" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Numero de Proveedor</th>
                        <th class="text-center">Razón Social</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var proveedor in (ViewBag.proveedores))
                    {
                        <tr>
                            <td class="text-center">@proveedor.NumeroProveedor</td>
                            <td class="text-center vert-align">@proveedor.Nombre1</td>
                            <td class="text-center">
                                <a class="button btn-info btn-sm" href="@Url.Action("OrdenDeCompra","ControlCitas", new { @proveedorId = @proveedor.Id })"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Siguiente</a>
                            </td>
                        </tr>

                    }

                    <tr>
                        <td class="text-center">0000001</td>
                        <td class="text-center vert-align">Prueba</td>
                        <td class="text-center">
                            <a class="button btn-info btn-sm" href="@Url.Action("OrdenDeCompra","ControlCitas", new { @proveedorId = "1"})"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Siguiente</a>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><span id="mensaje-titulo"></span></h4>
            </div>
            <div class="modal-body">
                <p id="mensaje-contenido"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var usuarioMensajes = "@ViewBag.mensajesUsuario";

        $(document).ready(function () {
            $(document).on("click", ".ver-mensaje", function () {
                Visualizar($(this).data('id'));
                var titulo = $(this).data('titulo');
                var contenido = $(this).data('contenido');
                $('.modal-title').text(titulo);
                $(".modal-body #mensaje-contenido").text(contenido);
            });

            $(document).on("click", ".descargar-mensaje", function () {
                Visualizar($(this).data('id'));
            });

            $('#mensajes').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
        });


        function Visualizar(mensajeId) {
            $.ajax({
                url: '@Url.Action("Visualizar", "MensajesInstitucionales")',
                data: { id: mensajeId },
                type: 'POST',
                success: function (data) {
                    $("#mensaje-tr-id-" + mensajeId + " .leido-flag").text("SI");
                    //alert(data);
                }
            });
        }
    </script>
}
