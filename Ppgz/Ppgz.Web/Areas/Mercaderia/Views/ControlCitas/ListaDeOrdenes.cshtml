@using Ppgz.Web.Areas.Mercaderia
@{
    ViewBag.Title = "Lista de Ordenes de Compra";
    ViewBag.Descripcion = "Paso 4 Confirmación de la Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var currentCita = (CurrentCita)ViewBag.CurrentCita;

    var fechaCita = (DateTime)@currentCita.Fecha;
}    
<h2>@ViewBag.Title</h2>
<p class="page-description-title">
    <i class="fa fa-calculator" aria-hidden="true"></i> <i>@ViewBag.Descripcion</i>
</p>

<div class="panel panel-default">
    <div class="panel-heading">Datos de la Cita</div>
    <div class="panel-body">
        <div class="row">
            <label class="col-sm-3 control-label">RFC</label>
            <div class="col-sm-3">
                <div>@currentCita.Proveedor.Rfc</div>
            </div>
            <label class="col-sm-3 control-label">Nombre</label>
            <div class="col-sm-3">
                <div>@currentCita.Proveedor.Nombre1</div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 control-label">Fecha de la Cita</label>
            <div class="col-sm-3">
                <div>@fechaCita.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="col-sm-6">
                <div class="btn-group btn-group-justified hidden-sm hidden-xs" role="group" aria-label="Opciones Cita">
                    <a class="btn btn-primary" href="@Url.Action("ListaDeOrdenes", "ControlCitas")">
                        <i class="fa fa-check-square" aria-hidden="true"></i> Confirmar Cita
                    </a>
                    <a class="btn btn-success" href="@Url.Action("BuscarOrden", "ControlCitas", new {proveedorId = currentCita.Proveedor.Id})">
                        <i class="fa fa-plus" aria-hidden="true"></i> Nueva Orden
                    </a>
                    <a class="btn btn-danger" href="@Url.Action("Index", "ControlCitas")">
                        <i class="fa fa-times" aria-hidden="true"></i> Cancelar Cita
                    </a>
                </div>
                <div class="visible-sm visible-xs">
                    <a class="btn btn-primary btn-block" href="@Url.Action("ListaDeOrdenes", "ControlCitas")">
                        <i class="fa fa-check-square" aria-hidden="true"></i> Confirmar Cita
                    </a>
                    <a class="btn btn-success btn-block" href="@Url.Action("BuscarOrden", "ControlCitas", new { proveedorId = currentCita.Proveedor.Id })">
                        <i class="fa fa-plus" aria-hidden="true"></i> Nueva Orden
                    </a>
                    <a class="btn btn-danger btn-block" href="@Url.Action("Index", "ControlCitas")">
                        <i class="fa fa-times" aria-hidden="true"></i> Cancelar Cita
                    </a>
                </div>
            </div>
        </div>




    </div>
</div>



<div class="panel panel-default">
    <div class="panel-heading">ASN Registrados</div>
    <div class="panel-body">

        <p class="form-legend" style="">
            <i>Lista de Ordenes</i>
        </p>
        <table class="table table-striped table-condensed" id="asn">
            <thead>
                <tr>

                    <th class="text-center">Numero de Orden</th>
                    <th class="text-center">Total Solicitado</th>
                    <th class="text-center">Total a Entregar</th>
                    <th class="text-center"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var ordenCompra in currentCita.GetOrdenes())
                {
                    var cantPed = Decimal.ToInt32(ordenCompra.ordencompradetalles.AsEnumerable().Sum(x => decimal.Parse(x.CantidadPedido)));
                    var cantComp = Decimal.ToInt32(ordenCompra.ordencompradetalles.AsEnumerable().Sum(x => x.CantidadComprometida));

                    var color = "#000";
                    if (cantComp < cantPed)
                    {
                        color = "red";
                    }
                    <tr>

                        <td class="text-center"> @ordenCompra.NumeroDocumento</td>
                        <td class="text-center"> @cantPed</td>
                        <td class="text-center" style="color: @color;"> @cantComp</td>
                        <td class="text-center" style="font-weight: bold; cursor: pointer">

                            @Html.ActionLink("Editar Orden", "Asn", "ControlCitas", new { @numeroDocumento = @ordenCompra.NumeroDocumento }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>




