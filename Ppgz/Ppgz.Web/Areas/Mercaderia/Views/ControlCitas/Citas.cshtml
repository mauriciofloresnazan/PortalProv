@using Ppgz.Repository
@{
    ViewBag.Title = "Citas registradas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Citas</h2>
<p class="page-description-title"><i class="fa fa-calculator" aria-hidden="true"></i> <i>Citas agendadas por proveedor.</i></p>

<div class="panel panel-default">
    <div class="panel-heading">Citas</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="citas" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Proveedor</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-center">Alamcen</th>
                        <th class="text-center">Rieles</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cita in (List<cita>)ViewBag.Citas)
                    {
                        <tr>
                            <td class="text-center">@cita.ProveedorId</td>
                            <td class="text-center">@cita.FechaCita</td>
                            <td class="text-center">@cita.CantidadTotal</td>
                            <td class="text-center">@cita.Almacen</td>
                            <td class="text-center">@cita.RielesOcupados</td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-sm" href="@Url.Action("CitaDetalle", "ControlCitas", new { @citaId = @cita.Id })">
                                    <i class="fa fa-check" aria-hidden="true"></i> Ver Detalle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $('#citas').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
        });


    </script>
}


