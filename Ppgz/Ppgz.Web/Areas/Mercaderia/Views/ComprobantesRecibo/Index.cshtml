@using System.Data
@{
    ViewBag.Title = "Comprobantes de Recibo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Gestión de Comprobantes de Recibo</h2>
<p class="page-description-title"><i class="fa fa-address-book" aria-hidden="true"></i> <i>En esta sección se podrá gestionar los Comprobantes de Recibo que tiene asociadas en su cuenta.</i></p>

<div class="panel panel-default">
    <div class="panel-heading">Comprobantes de Recibo</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table id="mensajes" class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center"></th>
                        <th class="text-center">N° de Orden de Compra</th>
                        <th class="text-center">Fecha</th>
                        <th class="text-center">Proveedor RFC</th>
                        <th class="text-center">Proveedor Razón Social</th>
                        <th class="text-center">Descargar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow registro in ((DataTable)ViewBag.data).Rows)
                    {
                        <tr>
                            @if (registro["FechaVisualizado"] == DBNull.Value)
                            {
                            <td class="text-center"><i class="fa fa-lightbulb-o" aria-hidden="true" style="font-size: 24px; color: red;"></i></td>
                            }
                            else
                            {
                                <td class="text-center"><i class="fa fa-lightbulb-o" aria-hidden="true" style="font-size: 24px; color: green;"></i></td>
                            }
                            <td class="text-center vert-align">@registro["NumeroOrden"]</td>
                            <td class="text-center vert-align">@registro["Fecha"]</td>
                            <td class="text-center vert-align">@registro["Rfc"]</td>
                            <td class="text-center vert-align">@registro["NombreProveedor"]</td>

                            <td class="text-center vert-align">
                                <a href="@Url.Action("Descargar", "ComprobantesRecibo", new {@id = @registro["Id"]})" class="descargar-visualizar"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Descargar</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {


            $(document).on("click", ".descargar-visualizar", function () {

                $(this).parent().parent().find(".fa-lightbulb-o").css("color", "green");

            });

          
        });
       
    </script>
}


