@model Ppgz.Web.Models.CambiarPasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<h1 class="text-center">@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <div class="panel panel-default">
            <div class="panel-heading">Cambiar Contraseña</div>
            <div class="panel-body">

                @using (Html.BeginForm("CambiarPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <span style="margin: 0;"><i class="fa fa-key" aria-hidden="true"></i> <i>Por favor ingrese su nueva contraseña.</i></span>
                    <hr style="margin-top: 0;" />
                    @Html.ValidationSummary("", new { @class = "text-danger" })


                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-key" aria-hidden="true"></i> Cambiar
                            </button>
                            <a href="@Url.Action("Index","Home")" class="btn btn-default"><i class="fa fa-undo" aria-hidden="true"></i> Cancelar</a>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
