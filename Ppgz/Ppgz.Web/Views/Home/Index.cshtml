@{
    ViewBag.Title = "Home Page";

    var photoSlides = Directory.GetFiles(Server.MapPath("~/assets/img/Photoslide"), "*.jpg")
                                     .Select(Path.GetFileName)
                                     .ToArray();
}
<div id="alrt" style="background: #f0f0f0;font-weight:bold;font-size:20px;font-family: Helvetica Neue,Helvetica,Arial,sans-serif;"></div>
<br>
<br>

<div>
    <h2 style="color: white"> </h2>
    <hr>
</div>




<div id="carousel-home" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">

        @for (var i = 0; i < photoSlides.Length; i++)
        {
            var active = "";
            if (@i == 0)
            {
                active = "active";
            }

            <li data-target="#carousel-home" data-slide-to="@i" class="@active"></li>
        }

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @for (var i = 0; i < photoSlides.Length; i++)
        {
            var active = "";
            if (@i == 0)
            {
                active = "active";
            }
            <div class="item @active">
                <img src="~/assets/img/Photoslide/@photoSlides[i]" width="1170" alt="photosslide">
            </div>
        }


    </div>

</div>
<img src="@Url.Content("~/assets/img/marcas-black.png")" style="display: none;" class="img-responsive center-block" width="100%">


@section Scripts {
    <script type="text/javascript">
        document.getElementById('alrt').innerHTML = '<b>Descarguen el archivo manual revisión de calidad en cedis que se encuentra en la opcion de ayuda para que lo abran y vean cuales son los puntos de revisión que se tomaran en cuenta al momento de entregar</b>';
        setTimeout(function () { document.getElementById('alrt').innerHTML = ''; }, 30000);
    </script>
}