@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="form-signin-heading">Administrar Usuarios Proveedor</h2>
<p class="page-description-title">
    <i class="fa fa-users" aria-hidden="true"></i> <i>Puede registrar hasta 5 usuarios adicionales para administrar su cuenta principal de Proveedor.</i>
</p>

<div class="panel panel-default">
    <div class="panel-heading">Lista de Usuarios</div>
    <div class="panel-body">
        <div class="col-md-12">
            <table class="table table-striped table-condensed table-bordered" id="usuarios">
                <thead>
                    <tr>
                        <th class="text-center">Nombre de Usuario</th>
                        <th class="text-center">Nombre del Responsable</th>
                        <th class="text-center">Correo del Responsable</th>
                        <th class="text-center"><a href="@Url.Action("Registrar", "ProveedorAdministrarUsuarios")" class="btn btn-primary btn-xs"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var usuario in (ViewBag.usuarios))
                    {
                        <tr>
                            <td class="text-center vert-align">@usuario.userName</td>
                            <td class="text-center vert-align">@usuario.nombre @usuario.apellido</td>
                            <td class="text-center vert-align">@usuario.email</td>
                            <td class="text-center">
                                <div class="btn-group " role="group" aria-label="...">
                                    <a class="btn btn-warning btn-xs" href="@Url.Action("Editar", "ProveedorAdministrarUsuarios",new { @id = @usuario.Id})" ><i class=" fa fa-pencil" aria-hidden="true"></i> Editar</a>
                                    <a class="btn btn-danger btn-xs" data-toggle="confirmation" data-btn-ok-label="Si" data-title="¿Esta seguro?" data-content="El usuario será eliminado." href="@Url.Action("Eliminar", "ProveedorAdministrarUsuarios", new { @id = @usuario.Id })"><i class="fa fa-times" aria-hidden="true"></i> Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
</div>



@section Scripts {
    <script type="text/javascript">


        $(document).ready(function () {
            $('#usuarios').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.13/i18n/Spanish.json"
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]]
            });
        });


    </script>
}


